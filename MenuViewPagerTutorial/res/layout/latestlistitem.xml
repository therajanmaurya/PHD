<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/latestimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="19dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/latestheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/latestimg"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/latestimg"
        android:text="TextView"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/latestDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latestheading"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/latestimg"
        android:text="TextView" />

    <TextView
        android:id="@+id/latestvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latestDate"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/latestimg"
        android:text="TextView" />

</RelativeLayout>